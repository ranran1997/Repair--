/* pages/phonefault/phonefault.wxss */

.container {
  padding-bottom: 172rpx;
   background-color: #fff;
}
.problem .txt {
  margin-left: 3%;
  color: #777;
  font-size: 40rpx;
  height: 100rpx;
  line-height: 110rpx;
  border-bottom:10rpx solid #f8f8f8;
}



.fault {
  background-color: #fff;
  border-bottom: 1rpx solid #f8f8f8;
  height: 100rpx;
  line-height: 100rpx;
   padding:0 30rpx;
}

.fault .price {
  color: #f83f4d;
  font-weight: bold;
  width:30%;
}
.group{
   width: 85%;
}
.bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 170rpx;
  background-color: #f1f1f1;
}

.bottom view {
  height: 100rpx;
  width: 90%;
  background-color: #f83f4d;
  color: #fff;
  border-radius: 15rpx;
}
