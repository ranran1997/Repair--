/* pages/phonefault/phonefault.wxss */

.container {
  padding-bottom: 172rpx;
   background-color: #fff;
}

.choice .txt, .problem .txt {
  margin-left: 3%;
  color: #777;
  font-size: 40rpx;
  height: 100rpx;
  line-height: 110rpx;
  border-bottom:10rpx solid #f8f8f8;
}

.color {
  background-color: #fff;
}

.color view {
  width: 28%;
  height: 100rpx;
  border: 1rpx solid #ccc;
  margin: 2.3%;
  text-align: center;
}

.img {
  width: 50rpx;
  height: 43rpx;
  position: absolute;
  right: 0;
  bottom: 0;
}
.fault {
  background-color: #fff;
  border-bottom: 1rpx solid #f8f8f8;
  height: 100rpx;
  line-height: 100rpx;
   padding:0 30rpx;
}

.fault .price {
  color: #f83f4d;
  font-weight: bold;
  width:30%;
}
.group{
   width: 85%;
}
.bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 170rpx;
  background-color: #f1f1f1;
}

.bottom view {
  height: 100rpx;
  width: 90%;
  background-color: #f83f4d;
  color: #fff;
  border-radius: 15rpx;
}
