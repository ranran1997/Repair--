/* pages/persona/persona.wxss */

.container {
  height: 100%;
  background-color: #fff;
}

.top {
  width: 100%;
  height: 325rpx;
}

.top:first-child image {
  width: 100%;
  height: 100%;

}

.header {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  position: absolute;
  bottom: -100rpx;
  left: 50%;
  margin-left: -90rpx;
  border:10rpx solid #fff;
 
}
.header image{
   width: 180rpx;
  height:  180rpx; 
   border-radius: 50%;
    margin-bottom:6rpx;
}
.only{
 margin-top:120rpx;
}
.strip {
  width: 100%;
  height:120rpx;
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #e6e6e6;
  position: relative;
}

.icon {
  width: 40rpx;
  height: 48rpx;
  margin: 38rpx 28rpx 49rpx 30rpx;
}

.title {
  line-height: 125rpx;
  font-size: 37rpx;
  color:#181818;

}

.arrows {
  width: 12rpx;
  height: 21rpx;
  position: absolute;
  top: 54rpx;
  right:30rpx;
}
/* 弹框 */
.black {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.shade {
  width: 100%;
  height: 100%;
  background-color: #000;
  opacity: 0.5;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 98;
}

.welcome {
  width: 78%;
  height: 255rpx;
  border-radius: 3%;
  z-index: 99;
  background: #fff;
  position: absolute;
  top: 35%;
  left: 50%;
  margin-left: -39%;
}

.welcome view {
  font-size: 34rpx;
  margin-top: 38rpx;
}

.welcome button {
  width: 43%;
  height: 80rpx;
  background-color: transparent;
  border:1rpx solid red;
  line-height: 80rpx;
  border-radius: 50rpx;
  margin-top: 55rpx;
  font-size:33rpx;
}
